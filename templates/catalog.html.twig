{% extends 'base.html.twig' %}

{% block title %}Продукты{% endblock %}

{% block body %}
    <main role="main">
        <div class="album py-5">
            <div class="container">
                <div class="row">
                    {% for product in pagination %}
                        {# @var product \App\Entity\Product #}
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <a href="{{ path('product', {'id': product.id}) }}">
                                    <img src="{{ asset(product.image, 'product') }}" alt=""
                                         class="bd-placeholder-img card-img-top">
                                </a>
                                <div class="card-body">
                                    <a href="{{ path('product', {'id': product.id}) }}">
                                        <h5 class="card-title">{{ product.title }}</h5>
                                    </a>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="{{ path('product.update', {'id': product.id}) }}"
                                           class="btn btn-sm btn-outline-primary">Редактировать</a>
                                        <a href=""
                                           class="btn btn-sm btn-outline-danger">Удалить</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
