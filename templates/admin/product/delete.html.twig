{% extends 'admin/layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <div class="card">
                <h2 class="card-header">
                    Удалить продукт?
                </h2>
                <div class="card-body">
                    <img src="{{ asset(product.image.path, product.image.packageName) }}"
                         alt="Нет изображения"
                         class="img-thumbnail float-left mr-2"
                         width="200px"
                         height="200px">
                    <h3 class="card-title">
                        {{ product.title }}
                    </h3>
                    <p class="card-text">
                        {{ product.description }}
                    </p>
                </div>
                <div class="card-footer">
                    {{ form_start(form, {'attr': {'class': 'd-inline'}}) }}
                    <button class="btn btn-danger">Удалить</button>
                    {{ form_end(form) }}
                    <a href="{{ path('product_index') }}" class="btn btn-light">Отмена</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}