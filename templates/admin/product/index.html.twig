{% extends 'admin/layout.html.twig' %}

{% block title %}Продукты{% endblock %}

{% block h1 %}Продукты{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('product_create') }}" class="btn btn-success mb-2">
                <span data-feather="plus"></span> Создать
            </a>
        </div>
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Название</th>
                    <th scope="col">Картинка</th>
                    <th scope="col">Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for product in pagination %}
                    {# @var \App\Entity\Product product #}
                    <tr>
                        <th scope="row">{{ product.id }}</th>
                        <td>{{ product.title }}</td>
                        <td>
                            <img src="{{ asset(product.image.path, product.image.packageName) }}"
                                 alt="Нет изображения"
                                 class="img-thumbnail"
                                 width="50px"
                                 height="50px">
                        </td>
                        <td>
                            <a href="{{ path('product_update', {'id': product.id}) }}" class="btn btn-primary">
                                <span data-feather="edit"></span> Редактировать
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}