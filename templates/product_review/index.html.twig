{% extends 'base.html.twig' %}

{% block title %}Оставить отзыв{% endblock %}

{% block body %}
    <main role="main">
        <div class="album py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="text-center mb-5">{{ product.title }}</h1>
                    </div>
                    <div class="col-md-4">
                        <img src="{{ asset(product.image, 'product') }}" alt=""
                             class="img-thumbnail mb-3">
                    </div>
                    <div class="col-md-8">
                        <p>{{ product.description }}</p>
                    </div>
                </div>
                <div class="row justify-content-md-center">
                    <div class="col-md-8 col">
                        {{ form_start(form) }}
                            {{ form_row(form.text) }}
                            <button class="btn btn-success" type="submit">Отправить</button>
                            <a href="{{ path('product', {'id': product.id}) }}" class="btn btn-light">Отмена</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
