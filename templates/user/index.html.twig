{% extends 'base.html.twig' %}

{% block title %}Управление пользователями{% endblock %}

{% block body %}
    <main role="main">
        <div class="album py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="text-center mb-5">Управление пользователями</h1>
                    </div>
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Права доступа</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in pagination %}
                            {# @var user \App\Entity\User #}
                            <tr>
                                <th scope="row">{{ user.id }}</th>
                                <td>{{ user.email }}</td>
                                <td>
                                    <?php foreach ($user['permissions'] as $permission) : ?>
                                    <span class="badge badge-primary"><?= escape(Authorization\permission_to_text($permission)) ?></span>
                                    <?php endforeach; ?>
                                </td>

                                <td>
                                    <a href="{{ path('user_update', {'id': user.id}) }}"
                                       class="btn btn-sm <?php if (can('user_update')) : ?>btn-outline-primary<?php else : ?>btn-outline-secondary disabled<?php endif; ?>"
                                    >Редактировать</a>
                                    <form class="d-inline" action="{{ path('user_remove', {'id': user.id}) }}" method="post"
                                          onsubmit="return confirm('Удалить пользователя?');">
                                        <input type="hidden" name="_method" value="delete">
                                        <input type="hidden" name="token" value="{{ csrf_token('user') }}">
                                        <button class="d-inline btn btn-sm <?php if (can('user_destroy')) : ?>btn-outline-danger<?php else : ?>btn-outline-secondary disabled<?php endif; ?>" type="submit">Удалить</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
