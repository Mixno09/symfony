{% extends 'base.html.twig' %}

{% block title %}
    {% if product|default %}Редактирование товара{% else %}Создание товара{% endif %}
{% endblock %}

{% block body %}
    <main role="main">
        <div class="album py-5">
            <div class="container">
                <div class="row justify-content-md-center">
                    <div class="col-md-6">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            {{ form_row(form.title) }}
                            {{ form_row(form.description) }}
                            {% if product|default %}
                                <img src="{{ asset(product.image, 'product') }}" alt="">
                            {% endif %}
                            {{ form_row(form.image) }}
                            {{ form_row(form.save) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
